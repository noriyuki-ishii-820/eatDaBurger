<div class="columns is-centered">
    <div class="column">
        <h1 id="header">Eat Da Burgers!</h1>
        <img src="assets/img/burger.png" alt="burger">
    </div>
</div>

<div class="columns is-centered mainSection">
    <div class="column is-one-quarter box">
        <h2 class="burgerHead">Burgers Available</h2>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>{{this.burger_name}} <button type="button" class="devour button is-link"
                    data-id="{{this.id}}">Devour!</button></li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column is-one-quarter box">
        <h2 class="burgerHead">Burgers Devoured</h2>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li> {{this.burger_name}} <button type="button" class="button trash is-danger"
                    data-id="{{this.id}}">Delete!</button></li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="columns  is-centered">
    <div class="column is-half box submitBox">
        <h2 class="burgerHead">Add Burgers</h2>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="burgerText" name="burgers" placeholder="Enter your favorite burger here!">
                <button type="submit" id="submit" class="button is-success submitBtn">Submit</button>
            </div>

            <p>Enter a burger you want to eat and click the "Submit" button!</p>
        </form>
    </div>
</div>