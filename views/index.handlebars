<h1>Eat Da Burger!</h1>

<h2>Burgers Available</h2>

<div>
    <ul>
        {{#each burgers}}
        {{#if devoured = true}}
        <li>
            <p>{{this.burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
    </ul><!-- uneaten burgers -->

</div>

<div>
    <ul>
        <!-- eaten burgers -->
        {{#each burgers}}
        {{#if devoured = false}}
        <li>
            <p>{{this.burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
        <button type="submit">Devour it!</button>
    </ul>

</div>

<h2>Add Burgers</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Submit</button>
    <p>Enter a burger you want to eat and click the "Submit" button!</p>
</form>